<div class="content">
 <div style="display:inline-block;">
    <table class="table" id="cars_list">
      <tr>
        <td> <b>Brand:</b> </td>
        <td> <b>Model:</b> </td>
        <td> <b>Type:</b> </td>
        <td> <b>Fuel:</b> </td>
        <td> <b>Engine:</b> </td>
        <td> <b>Condition:</b> </td>
        <td> <b>Price:</b> </td>
        <td> <b>Year:</b> </td>
        <td> <b>Color:</b> </td>
      </tr>

      <% @cars.each do |car| %>
          <tr>
            <td><%= car.brand %></td>
            <td><%= car.model %></td>
            <td><%= car.body_type %></td>
            <td><%= car.fuel_type %></td>
            <td><%= car.engine_capacity %></td>
            <td><%= car.condition %></td>
            <td><%= car.price %></td>
            <td><%= car.year %></td>
            <td><%= car.color %></td>
            <td><%= car.year %></td>
            <td><%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_car_path(car), :class => "btn btn-default btn-mini" %>
            <%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe, car, :confirm => 'Are you sure you want to delete the car?', :method => :delete, :class => "btn btn-mini btn-danger" %>
            </td>
          </tr>
      <% end %>
    </table>
 
    <%= link_to 'Add new car', new_car_path %>
  </div>
</div>

